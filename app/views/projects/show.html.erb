}


.hero {
  height: 100vh;
  width: 100%;
  background-image: url(../images/wallhaven-eoxve8_2560x1440.png);
  background-color: #4b4b55;
  background-blend-mode: multiply;
  background-size: cover;
  background-position: center;
}

#blur.active{
    filter: blur(10px);
    z-index:1;
}

body.stop-scrolling {
  height: 100%;
  overflow: hidden;
}
.popup{
  background-color: #ffffff;
  width: 420px;
  height: 250px;
  padding: 30px 40px;
  position: absolute;
  transform: translate(-50%,-50%);
  left: 50%;
  top: 50%;
  border-radius: 8px;
  /* display: none; */
  visibility: hidden;
  font-family: “Poppins”,sans-serif;
  text-align: center;
  z-index:4;
}
   #popup.active {
visibility: visible;
transition: 0.5s;
overflow-y: hidden;
z-index:5;
}
.popup button{
  display: block;
  margin:  0 0 20px auto;

  font-size: 30px;
  color: #ffffff;
  background: #f9004d;
  border-radius: 100%;
  width: 40px;
  height: 40px;
  border: none;
  outline: none;
  cursor: pointer;
}
.popup-content {
  text-align: center;
}

.popup-content h2 {
  margin-bottom: 20px;
}

.popup .email-input {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.popup .send-button {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  background-color: #007bff; /* Set your desired button color */
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.popup .send-button:hover {
  background-color: #0056b3; /* Set your desired button hover color */
}

.custom-modal-body {
  padding: 20px;
}

.custom-form-group {
  margin-bottom: 15px;
}

.custom-form-label {
  display: block;
  margin-bottom: 5px;
  font-size: 14px;
}

.custom-form-control {
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
}

.custom-btn {
  padding: 10px 15px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
}

.custom-btn-primary {
  background-color: #007bff;
  color: #fff;
}

.custom-btn-secondary {
  background-color: #6c757d;
  color: #fff;
}

.custom-modal-footer {
  padding: 10px;
  text-align: right;
}
.numbers {
  flex-grow: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
</style>
</head>

