<!-- app/views/projects/_form.html.erb -->

<%= form_with(model: project, url: project.persisted? ? project_path(project) : projects_path, method: project.persisted? ? :patch : :post, html: { class: "mb-3" }) do |form| %>
  <div class="mb-3">
    <%= form.label :project_name, class: "col-form-label" %>
    <%= form.text_field :project_name, class: "form-control", id: "project-name" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "col-form-label" %>
    <%= form.text_area :description, class: "form-control", id: "description" %>
  </div>
  <%= form.submit project.persisted? ? "Update Project" : "Create Project", class: "btn btn-primary" %>
<% end %>
